											  VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
											  IsHorizontalRailEnabled="{TemplateBinding ScrollViewer.IsHorizontalRailEnabled}"
											  IsVerticalRailEnabled="{TemplateBinding ScrollViewer.IsVerticalRailEnabled}"
											  IsDeferredScrollingEnabled="{TemplateBinding ScrollViewer.IsDeferredScrollingEnabled}"
											  Margin="{TemplateBinding BorderThickness}"
											  Padding="{TemplateBinding Padding}"
											  IsTabStop="False"
											  ZoomMode="Disabled"
											  AutomationProperties.AccessibilityView="Raw" />

								<TextBlock x:Name="PlaceholderTextContentPresenter"
										   Grid.Column="0"
										   Text="{TemplateBinding PlaceholderText}"
										   Foreground="{ThemeResource TextControlPlaceholderForeground}"
										   IsHitTestVisible="False"
										   Margin="{TemplateBinding BorderThickness}"
										   Padding="{TemplateBinding Padding}"
										   Visibility="Collapsed" />

								<Button x:Name="SendButton"
										Grid.Column="1"
										Style="{StaticResource DarkButtonStyle}"
										BorderThickness="0"
										IsTabStop="False"
										AutomationProperties.AccessibilityView="Raw"
										HorizontalAlignment="Stretch"
										VerticalAlignment="Stretch">
									<ToolTipService.ToolTip>
										<TextBlock Text="Click to send the message" />
									</ToolTipService.ToolTip>
									<FontIcon Glyph="&#xE724;" />
								</Button>

							</Grid>
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="DarkScrollViewerSettingsStyle"
		   TargetType="ScrollViewer">
		<Setter Property="Background"
				Value="{StaticResource DarkRegionColor}" />
	</Style>

	<Style x:Key="DarkDialogMainGridStyle"
		   TargetType="Grid">
		<Setter Property="Background"
				Value="{StaticResource DarkBlurColor}" />
	</Style>

	<Style x:Key="DarkDialogCotentGridStyle"
		   TargetType="Grid">
		<Setter Property="Width"
				Value="1280" />
		<Setter Property="Height"
				Value="720" />
		<Setter Property="HorizontalAlignment"
				Value="Center" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="Background"
				Value="{StaticResource DarkRegionColor}" />
	</Style>

	<Style x:Key="DarkDialogGridHeaderStyle"
		   TargetType="Grid">
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="HorizontalAlignment"
				Value="Stretch" />
		<Setter Property="Background"
				Value="{StaticResource DarkBase900Color}" />
	</Style>

	<Style x:Key="DarkDialogTextBlockHeaderStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource TitleLargeTextBlockStyle}">
		<Setter Property="HorizontalAlignment"
				Value="Center" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="Margin"
				Value="36" />
	</Style>

	<Style x:Key="DarkComboBoxItemContainerStyle"
		   TargetType="ComboBoxItem">
		<Setter Property="HorizontalContentAlignment"
				Value="Stretch" />
		<Setter Property="VerticalContentAlignment"
				Value="Stretch" />
		<Setter Property="Padding"
				Value="0" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ComboBoxItem">
					<Grid>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal" />
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkPointerOverItemColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Selected">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkSelectedItemColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<Border x:Name="ListViewItemBorder"
								Padding="6"
								CornerRadius="0">
							<Border.Background>
								<SolidColorBrush x:Name="BorderBackground"
												 Color="{StaticResource DarkBase900Color}" />
							</Border.Background>
							<ContentPresenter x:Name="ContentPresenter"
											  Content="{TemplateBinding Content}"
											  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
											  VerticalAlignment="{TemplateBinding VerticalAlignment}" />
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="DarkComboBoxStyle"
		   TargetType="ComboBox"
		   BasedOn="{StaticResource DefaultComboBoxStyle}">
		<Setter Property="MinWidth"
				Value="120" />
		<Setter Property="MinHeight"
				Value="32" />
		<Setter Property="Foreground"
				Value="{ThemeResource ComboBoxForeground}" />
		<Setter Property="Background"
				Value="Transparent" />
		<Setter Property="BorderThickness"
				Value="1" />
		<Setter Property="ItemContainerStyle"
				Value="{StaticResource DarkComboBoxItemContainerStyle}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ComboBox">
					<Grid x:Name="MainGrid">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBrush"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkBase900Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBrush"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkBase1100Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkBase600Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Disabled">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkRegionAltColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>

						</VisualStateManager.VisualStateGroups>

						<Border x:Name="Background"
								BorderThickness="{TemplateBinding BorderThickness}"
								MinWidth="{TemplateBinding MinWidth}"
								MinHeight="{TemplateBinding MinHeight}">
							<Border.BorderBrush>
								<SolidColorBrush x:Name="BorderBrush"
												 Color="{StaticResource DarkBase900Color}" />
							</Border.BorderBrush>
							<Grid>
								<Grid.Background>
									<SolidColorBrush x:Name="BorderBackground"
													 Color="{StaticResource DarkRegionColor}" />
								</Grid.Background>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="32" />
								</Grid.ColumnDefinitions>

								<ContentPresenter x:Name="ContentPresenter"
												  Grid.Column="0"
												  Content="{TemplateBinding SelectionBoxItem}"
												  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
												  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
												  Margin="{TemplateBinding Padding}"
												  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
												  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />

								<FontIcon Grid.Column="1"
										  Glyph="&#xE0E5;"
										  FontFamily="{ThemeResource SymbolThemeFontFamily}"
										  FontSize="12"
										  HorizontalAlignment="Center"
										  VerticalAlignment="Center"
										  Foreground="{ThemeResource ComboBoxForeground}" />

								<Popup x:Name="Popup"
									   IsLightDismissEnabled="True"
									   LightDismissOverlayMode="On"
									   PlacementTarget="{Binding ElementName=MainGrid}">
									<Border x:Name="PopupBorder"
											Background="{StaticResource DarkRegionColor}"
											BorderBrush="{StaticResource DarkBase900Color}"
											BorderThickness="1">
										<ScrollViewer x:Name="ScrollViewer"
													  MaxHeight="{TemplateBinding MaxDropDownHeight}"
													  MinWidth="{Binding ElementName=Background, Path=ActualWidth}"
													  VerticalScrollMode="Auto"
													  VerticalScrollBarVisibility="Auto">
											<ItemsPresenter Margin="0,4,0,4" />
										</ScrollViewer>
									</Border>
								</Popup>
							</Grid>
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="DarkFlyoutPresenterStyle"
		   TargetType="FlyoutPresenter"
		   BasedOn="{StaticResource DefaultFlyoutPresenterStyle}">
		<Setter Property="Background"
				Value="{StaticResource LightRegionColor}" />
		<Setter Property="Padding"
				Value="0" />
		<Setter Property="BorderThickness"
				Value="0" />
		<Setter Property="CornerRadius"
				Value="0" />
		<Setter Property="Margin"
				Value="0, -5, 0, 0" />
	</Style>

	<Style x:Key="DarkSplitButtonStyle"
		   TargetType="SplitButton">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="SplitButton">
					<Grid x:Name="RootGrid">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="PrimaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkBase600Color}"
														Duration="0:0:0.1" />
										<ColorAnimation Storyboard.TargetName="SecondaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkBase600Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="PrimaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkRegionAltColor}"
														Duration="0:0:0.1" />
										<ColorAnimation Storyboard.TargetName="SecondaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkRegionAltColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="PrimaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkBase1100Color}"
														Duration="0:0:0.1" />
										<ColorAnimation Storyboard.TargetName="SecondaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkBase1100Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
							<VisualStateGroup x:Name="FlyoutStates">
								<VisualState x:Name="FlyoutOpen">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="SecondaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource DarkBase1100Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>

							<!-- Primary Button -->
							<Button x:Name="PrimaryButton"
									Grid.Column="0"
									Style="{StaticResource DarkButtonStyle}"
									HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
									Padding="{TemplateBinding Padding}"
									AutomationProperties.Name="{TemplateBinding AutomationProperties.Name}"
									BorderThickness="0"
									IsTabStop="False"
									AutomationProperties.AccessibilityView="Raw">
								<Button.Background>
									<SolidColorBrush x:Name="PrimaryButtonBackground"
													 Color="{StaticResource DarkBase600Color}" />
								</Button.Background>
								<ContentPresenter x:Name="ContentPresenter"
												  Content="{TemplateBinding Content}"
												  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
												  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
							</Button>

							<!-- Secondary Button (Flyout) -->
							<Button x:Name="SecondaryButton"
									Grid.Column="1"
									Style="{StaticResource DarkButtonStyle}"
									Padding="{TemplateBinding Padding}"
									BorderThickness="0"
									IsTabStop="False"
									AutomationProperties.AccessibilityView="Raw"
									HorizontalAlignment="Stretch"
									VerticalAlignment="Stretch">
								<Button.Background>
									<SolidColorBrush x:Name="SecondaryButtonBackground"
													 Color="{StaticResource DarkBase600Color}" />
								</Button.Background>
								<FontIcon Glyph="&#xE70D;"
										  FontFamily="{ThemeResource SymbolThemeFontFamily}"
										  FontSize="12"
										  Height="12" />
							</Button>

							<Popup x:Name="FlyoutPopup">
								<Border x:Name="FlyoutBorder"
										Background="{StaticResource DarkRegionColor}"
										BorderBrush="{StaticResource DarkBase900Color}">
									<ContentPresenter x:Name="FlyoutPresenter"
													  Content="{TemplateBinding Flyout}" />
								</Border>
							</Popup>
						</Grid>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
