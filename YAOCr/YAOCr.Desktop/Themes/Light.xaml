<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
	</ResourceDictionary.MergedDictionaries>

	<Color x:Key="LightRegionColor">#FFF2F2F2</Color>
	<Color x:Key="LightRegionAltColor">#FFDADADA</Color>

	<Color x:Key="LightBase100Color">#FFA9ECCA</Color>
	<Color x:Key="LightBase200Color">#FF92E4BA</Color>
	<Color x:Key="LightBase300Color">#FF7BDCAA</Color>
	<Color x:Key="LightBase400Color">#FF65D39A</Color>
	<Color x:Key="LightBase500Color">#FF4ECB8A</Color>
	<Color x:Key="LightBase600Color">#FF37C37A</Color>
	<Color x:Key="LightBase700Color">#FF2CAE66</Color>
	<Color x:Key="LightBase800Color">#FF219A52</Color>
	<Color x:Key="LightBase900Color">#FF16853F</Color>
	<Color x:Key="LightBase1000Color">#FF0B712B</Color>
	<Color x:Key="LightBase1100Color">#FF005C17</Color>

	<Color x:Key="LightPrimary100Color">#FF96B2AC</Color>
	<Color x:Key="LightPrimary200Color">#FF799690</Color>
	<Color x:Key="LightPrimary300Color">#FF5D7A74</Color>
	<Color x:Key="LightPrimary400Color">#FF405E58</Color>
	<Color x:Key="LightPrimary500Color">#FF24423C</Color>
	<Color x:Key="LightPrimary600Color">#FF072620</Color>
	<Color x:Key="LightPrimary700Color">#FF06221B</Color>
	<Color x:Key="LightPrimary800Color">#FF041F17</Color>
	<Color x:Key="LightPrimary900Color">#FF031B12</Color>
	<Color x:Key="LightPrimary1000Color">#FF01180E</Color>
	<Color x:Key="LightPrimary1100Color">#FF001409</Color>

	<Style x:Key="LightMainGridStyle"
		   TargetType="Grid">
		<Setter Property="Background">
			<Setter.Value>
				<SolidColorBrush Color="{StaticResource LightRegionAltColor}" />
			</Setter.Value>
		</Setter>
		<Setter Property="Padding"
				Value="0" />
	</Style>

	<Style x:Key="LightGridStyle"
		   TargetType="Grid">
		<Setter Property="Background">
			<Setter.Value>
				<SolidColorBrush Color="{StaticResource LightRegionColor}" />
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="LightListViewItemContainerStyle"
		   TargetType="ListViewItem">
		<Setter Property="HorizontalContentAlignment"
				Value="Stretch" />
		<Setter Property="VerticalContentAlignment"
				Value="Stretch" />
		<Setter Property="Padding"
				Value="0" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ListViewItem">
					<Grid>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal" />
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase100Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Selected">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightPrimary100Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<Border x:Name="ListViewItemBorder"
								Padding="{TemplateBinding Padding}"
								CornerRadius="0">
							<Border.Background>
								<SolidColorBrush x:Name="BorderBackground"
												 Color="{StaticResource LightRegionColor}" />
							</Border.Background>
							<ContentPresenter x:Name="ContentPresenter"
											  Content="{TemplateBinding Content}"
											  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
											  VerticalAlignment="{TemplateBinding VerticalAlignment}" />
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="LightListViewStyle"
		   TargetType="ListView">
		<Setter Property="ItemContainerStyle"
				Value="{StaticResource LightListViewItemContainerStyle}" />
		<Setter Property="Background"
				Value="{StaticResource LightRegionColor}" />
		
	</Style>

	<Style x:Key="LightButtonStyle"
		   TargetType="Button">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Grid>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="ButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase600Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="ButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightRegionAltColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="ButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase1100Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Border x:Name="ButtonBorder"
								BorderThickness="0"
								BorderBrush="{TemplateBinding BorderBrush}"
								Padding="{TemplateBinding Padding}"
								CornerRadius="0">
							<Border.Background>
								<SolidColorBrush x:Name="ButtonBackground"
												 Color="{StaticResource LightBase600Color}" />
							</Border.Background>
							<ContentPresenter x:Name="ContentPresenter"
											  Content="{TemplateBinding Content}"
											  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
											  VerticalAlignment="{TemplateBinding VerticalAlignment}" />
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="LightTextBoxDeleteButtonStyle"
		   TargetType="Button">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Grid x:Name="ButtonLayoutGrid">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal" />
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="TextBlockDeleteButtonForeground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightPrimary600Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="TextBoxDeleteButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightPrimary600Color}"
														Duration="0:0:0.1" />

										<ColorAnimation Storyboard.TargetName="TextBlockDeleteButtonForeground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightRegionColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Border x:Name="ButtonBackground"
								BorderThickness="0"
								Width="{TemplateBinding Width}"
								Height="{TemplateBinding Height}">
							<Border.Background>
								<SolidColorBrush x:Name="TextBoxDeleteButtonBackground"
												 Color="Transparent" />
							</Border.Background>
							<TextBlock x:Name="GlyphElement"
									   Text="&#xE10A;"
									   FontFamily="{ThemeResource SymbolThemeFontFamily}"
									   HorizontalAlignment="Center"
									   VerticalAlignment="Center">
								<TextBlock.Foreground>
									<SolidColorBrush x:Name="TextBlockDeleteButtonForeground"
													 Color="{StaticResource LightBase1100Color}" />
								</TextBlock.Foreground>
							</TextBlock>
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="LightTextBoxStyle"
		   TargetType="TextBox">
		<Setter Property="MinWidth"
				Value="{ThemeResource TextControlThemeMinWidth}" />
		<Setter Property="MinHeight"
				Value="{ThemeResource TextControlThemeMinHeight}" />
		<Setter Property="Foreground"
				Value="{ThemeResource TextControlForeground}" />
		<Setter Property="Background"
				Value="{ThemeResource TextControlBackground}" />
		<Setter Property="BorderBrush"
				Value="{ThemeResource TextControlBorderBrush}" />
		<Setter Property="SelectionHighlightColor"
				Value="{StaticResource LightPrimary600Color}" />
		<Setter Property="BorderThickness"
				Value="{ThemeResource TextControlBorderThemeThickness}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="TextBox">
					<Grid>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightRegionColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBrush"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase1100Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Focused">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBrush"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightPrimary600Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Disabled">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightRegionAltColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
							<VisualStateGroup x:Name="ButtonStates">
								<VisualState x:Name="ButtonVisible">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="DeleteButton"
																	   Storyboard.TargetProperty="Visibility">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="Visible" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
								<VisualState x:Name="ButtonCollapsed" />
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Border x:Name="BorderElement"
								Background="Transparent"
								BorderThickness="{TemplateBinding BorderThickness}"
								MinWidth="{TemplateBinding MinWidth}"
								MinHeight="{TemplateBinding MinHeight}">
							<Border.BorderBrush>
								<SolidColorBrush x:Name="BorderBrush"
												 Color="{StaticResource LightBase900Color}" />
							</Border.BorderBrush>
							<Grid>
								<Grid.Background>
									<SolidColorBrush x:Name="BorderBackground"
													 Color="{StaticResource LightRegionColor}" />
								</Grid.Background>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>

								<ScrollViewer x:Name="ContentElement"
											  Grid.Column="0"
											  HorizontalScrollMode="{TemplateBinding ScrollViewer.HorizontalScrollMode}"
											  VerticalScrollMode="{TemplateBinding ScrollViewer.VerticalScrollMode}"
											  HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
											  VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
											  IsHorizontalRailEnabled="{TemplateBinding ScrollViewer.IsHorizontalRailEnabled}"
											  IsVerticalRailEnabled="{TemplateBinding ScrollViewer.IsVerticalRailEnabled}"
											  IsDeferredScrollingEnabled="{TemplateBinding ScrollViewer.IsDeferredScrollingEnabled}"
											  Margin="{TemplateBinding BorderThickness}"
											  Padding="{TemplateBinding Padding}"
											  IsTabStop="False"
											  ZoomMode="Disabled"
											  AutomationProperties.AccessibilityView="Raw" />

								<TextBlock x:Name="PlaceholderTextContentPresenter"
										   Grid.Column="0"
										   Text="{TemplateBinding PlaceholderText}"
										   Foreground="{ThemeResource TextControlPlaceholderForeground}"
										   IsHitTestVisible="False"
										   Margin="{TemplateBinding BorderThickness}"
										   Padding="{TemplateBinding Padding}"
										   Visibility="Collapsed" />

								<Button x:Name="DeleteButton"
										Grid.Column="1"
										Style="{StaticResource LightTextBoxDeleteButtonStyle}"
										BorderThickness="0"
										IsTabStop="False"
										Visibility="Collapsed"
										AutomationProperties.AccessibilityView="Raw"
										HorizontalAlignment="Stretch"
										VerticalAlignment="Stretch" />
							</Grid>
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>