				Value="Center" />
		<Setter Property="Background"
				Value="{StaticResource LightRegionColor}" />
	</Style>

	<Style x:Key="LightDialogButtonStyle"
		   TargetType="Button"
		   BasedOn="{StaticResource LightButtonStyle}">
		<Setter Property="Width"
				Value="128" />
		<Setter Property="Padding"
				Value="10" />
	</Style>

	<Style x:Key="LightCloseDialogButtonStyle"
		   TargetType="Button">
		<Setter Property="Foreground"
				Value="{StaticResource LightRegionForegroundColor}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Grid>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="ButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightPrimary600Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="ButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightSecondaryColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="ButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightSecondaryAltColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Border x:Name="ButtonBorder"
								BorderThickness="0"
								BorderBrush="{TemplateBinding BorderBrush}"
								Padding="{TemplateBinding Padding}"
								CornerRadius="0">
							<Border.Background>
								<SolidColorBrush x:Name="ButtonBackground"
												 Color="{StaticResource LightPrimary600Color}" />
							</Border.Background>
							<ContentPresenter x:Name="ContentPresenter"
											  Content="{TemplateBinding Content}"
											  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
											  VerticalAlignment="{TemplateBinding VerticalAlignment}" />
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="LightScrollViewerSettingsStyle"
		   TargetType="ScrollViewer">
		<Setter Property="Background"
				Value="{StaticResource LightRegionColor}" />
	</Style>

	<Style x:Key="LightSettingsCotentGridStyle"
		   TargetType="Grid">
		<Setter Property="Width"
				Value="1280" />
		<Setter Property="Height"
				Value="720" />
		<Setter Property="HorizontalAlignment"
				Value="Center" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="Background"
				Value="{StaticResource LightRegionColor}" />
	</Style>

	<Style x:Key="LightSettingsGridHeaderStyle"
		   TargetType="Grid">
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="HorizontalAlignment"
				Value="Stretch" />
		<Setter Property="Background"
				Value="{StaticResource LightBase200Color}" />
	</Style>

	<Style x:Key="LightSettingsTextBlockHeaderStyle"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource TitleLargeTextBlockStyle}">
		<Setter Property="HorizontalAlignment"
				Value="Center" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="Margin"
				Value="36" />
	</Style>

	<Style x:Key="LightComboBoxItemContainerStyle"
		   TargetType="ComboBoxItem">
		<Setter Property="HorizontalContentAlignment"
				Value="Stretch" />
		<Setter Property="VerticalContentAlignment"
				Value="Stretch" />
		<Setter Property="Padding"
				Value="0" />
		<Setter Property="Background"
				Value="{StaticResource LightBase200Color}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ComboBoxItem">
					<Grid>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal" />
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightPointerOverItemColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Selected">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightSelectedItemColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<Border x:Name="ListViewItemBorder"
								Padding="6"
								CornerRadius="0">
							<Border.Background>
								<SolidColorBrush x:Name="BorderBackground"
												 Color="{StaticResource LightBase200Color}" />
							</Border.Background>
							<ContentPresenter x:Name="ContentPresenter"
											  Content="{TemplateBinding Content}"
											  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
											  VerticalAlignment="{TemplateBinding VerticalAlignment}" />
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="LightComboBoxStyle"
		   TargetType="ComboBox"
		   BasedOn="{StaticResource DefaultComboBoxStyle}">
		<Setter Property="MinWidth"
				Value="120" />
		<Setter Property="MinHeight"
				Value="32" />
		<Setter Property="Foreground"
				Value="{ThemeResource ComboBoxForeground}" />
		<Setter Property="BorderThickness"
				Value="1" />
		<Setter Property="ItemContainerStyle"
				Value="{StaticResource LightComboBoxItemContainerStyle}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ComboBox">
					<Grid x:Name="MainGrid">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBrush"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase900Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBrush"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase1100Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase600Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Disabled">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="BorderBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightRegionAltColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>

						</VisualStateManager.VisualStateGroups>

						<Border x:Name="Background"
								Background="Transparent"
								BorderThickness="{TemplateBinding BorderThickness}"
								MinWidth="{TemplateBinding MinWidth}"
								MinHeight="{TemplateBinding MinHeight}">
							<Border.BorderBrush>
								<SolidColorBrush x:Name="BorderBrush"
												 Color="{StaticResource LightBase900Color}" />
							</Border.BorderBrush>
							<Grid>
								<Grid.Background>
									<SolidColorBrush x:Name="BorderBackground"
													 Color="{StaticResource LightRegionColor}" />
								</Grid.Background>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="32" />
								</Grid.ColumnDefinitions>

								<ContentPresenter x:Name="ContentPresenter"
												  Grid.Column="0"
												  Content="{TemplateBinding SelectionBoxItem}"
												  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
												  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
												  Padding="{TemplateBinding Padding}"
												  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
												  VerticalAlignment="{TemplateBinding VerticalAlignment}" />

								<FontIcon Grid.Column="1"
										  Glyph="&#xE0E5;"
										  FontFamily="{ThemeResource SymbolThemeFontFamily}"
										  FontSize="12"
										  HorizontalAlignment="Center"
										  VerticalAlignment="Center"
										  Foreground="{ThemeResource ComboBoxForeground}" />

								<Popup x:Name="Popup"
									   IsLightDismissEnabled="True"
									   LightDismissOverlayMode="On"
									   PlacementTarget="{Binding ElementName=MainGrid}">
									<Border x:Name="PopupBorder"
											Background="{StaticResource LightRegionColor}"
											BorderBrush="{StaticResource LightBase900Color}"
											BorderThickness="1">
										<ScrollViewer x:Name="ScrollViewer"
													  MaxHeight="{TemplateBinding MaxDropDownHeight}"
													  MinWidth="{Binding ElementName=Background, Path=ActualWidth}"
													  VerticalScrollMode="Auto"
													  VerticalScrollBarVisibility="Auto">
											<ItemsPresenter Margin="0,4,0,4" />
										</ScrollViewer>
									</Border>
								</Popup>
							</Grid>
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="LightFlyoutPresenterStyle"
		   TargetType="FlyoutPresenter"
		   BasedOn="{StaticResource DefaultFlyoutPresenterStyle}">
		<Setter Property="Background"
				Value="{StaticResource LightRegionColor}" />
		<Setter Property="Padding"
				Value="0" />
		<Setter Property="BorderThickness"
				Value="0" />
		<Setter Property="CornerRadius"
				Value="0" />
		<Setter Property="Margin"
				Value="0, -5, 0, 0" />
	</Style>

	<Style x:Key="LightSplitButtonStyle"
		   TargetType="SplitButton">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="SplitButton">
					<Grid x:Name="RootGrid">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="PrimaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase600Color}"
														Duration="0:0:0.1" />
										<ColorAnimation Storyboard.TargetName="SecondaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase600Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="PrimaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightRegionAltColor}"
														Duration="0:0:0.1" />
										<ColorAnimation Storyboard.TargetName="SecondaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightRegionAltColor}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="PrimaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase1100Color}"
														Duration="0:0:0.1" />
										<ColorAnimation Storyboard.TargetName="SecondaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase1100Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
							<VisualStateGroup x:Name="FlyoutStates">
								<VisualState x:Name="FlyoutOpen">
									<Storyboard>
										<ColorAnimation Storyboard.TargetName="SecondaryButtonBackground"
														Storyboard.TargetProperty="Color"
														To="{StaticResource LightBase1100Color}"
														Duration="0:0:0.1" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>

							<!-- Primary Button -->
							<Button x:Name="PrimaryButton"
									Grid.Column="0"
									Style="{StaticResource LightButtonStyle}"
									HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
									Padding="{TemplateBinding Padding}"
									AutomationProperties.Name="{TemplateBinding AutomationProperties.Name}"
									BorderThickness="0"
									IsTabStop="False"
									AutomationProperties.AccessibilityView="Raw">
								<Button.Background>
									<SolidColorBrush x:Name="PrimaryButtonBackground"
													 Color="{StaticResource LightBase600Color}" />
								</Button.Background>
								<ContentPresenter x:Name="ContentPresenter"
												  Content="{TemplateBinding Content}"
												  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
												  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
							</Button>

							<!-- Secondary Button (Flyout) -->
							<Button x:Name="SecondaryButton"
									Grid.Column="1"
									Style="{StaticResource LightButtonStyle}"
									Padding="{TemplateBinding Padding}"
									BorderThickness="0"
									IsTabStop="False"
									AutomationProperties.AccessibilityView="Raw"
									HorizontalAlignment="Stretch"
									VerticalAlignment="Stretch">
								<Button.Background>
									<SolidColorBrush x:Name="SecondaryButtonBackground"
													 Color="{StaticResource LightBase600Color}" />
								</Button.Background>
								<FontIcon Glyph="&#xE70D;"
										  FontFamily="{ThemeResource SymbolThemeFontFamily}"
										  FontSize="12"
										  Height="12" />
							</Button>

							<Popup x:Name="FlyoutPopup">
								<Border x:Name="FlyoutBorder"
										Background="{StaticResource LightRegionColor}"
										BorderBrush="{StaticResource LightBase900Color}">
									<ContentPresenter x:Name="FlyoutPresenter"
													  Content="{TemplateBinding Flyout}" />
								</Border>
							</Popup>
						</Grid>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>