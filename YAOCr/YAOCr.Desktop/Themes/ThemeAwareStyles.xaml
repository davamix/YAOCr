				   TargetType="ListViewItem"
				   BasedOn="{StaticResource LightListViewItemContainerStyle}" />
			<Style x:Key="ThemedListViewStyle"
				   TargetType="ListView"
				   BasedOn="{StaticResource LightListViewStyle}" />
			<Style x:Key="ThemedTextBoxStyle"
				   TargetType="TextBox"
				   BasedOn="{StaticResource LightTextBoxStyle}" />
			<Style x:Key="ThemedListViewItemUserMessageStyle"
				   TargetType="ListViewItem"
				   BasedOn="{StaticResource LightListViewItemUserMessageStyle}" />
			<Style x:Key="ThemedListViewItemAssistantMessageStyle"
				   TargetType="ListViewItem"
				   BasedOn="{StaticResource LightListViewItemAssistantMessageStyle}" />
			<Style x:Key="ThemedMarkdownTextBlockStyle"
				   TargetType="controls:MarkdownTextBlock"
				   BasedOn="{StaticResource LightMarkdownTextBlockStyle}" />
			<Style x:Key="ThemedPromptStyle"
				   TargetType="custom:Prompt"
				   BasedOn="{StaticResource LightPromptStyle}" />
			<Style x:Key="ThemedSrollViewerSettingsStyle"
				   TargetType="ScrollViewer"
				   BasedOn="{StaticResource LightScrollViewerSettingsStyle}" />
			<Style x:Key="ThemedDialogMainGridStyle"
				   TargetType="Grid"
				   BasedOn="{StaticResource LightDialogMainGridStyle}" />
			<Style x:Key="ThemedDialogGridHeaderStyle"
				   TargetType="Grid"
				   BasedOn="{StaticResource LightDialogGridHeaderStyle}" />
			<Style x:Key="ThemedDialogTextBlockHeaderStyle"
				   TargetType="TextBlock"
				   BasedOn="{StaticResource LightDialogTextBlockHeaderStyle}" />
			<Style x:Key="ThemedDialogCotentGridStyle"
				   TargetType="Grid"
				   BasedOn="{StaticResource LightDialogCotentGridStyle}" />
			<Style x:Key="ThemedComboBoxItemContainerStyle"
				   TargetType="ComboBoxItem"
				   BasedOn="{StaticResource LightComboBoxItemContainerStyle}" />
			<Style x:Key="ThemedComboBoxStyle"
				   TargetType="ComboBox"
				   BasedOn="{StaticResource LightComboBoxStyle}" />
			<Style x:Key="ThemedFlyoutPresenterStyle"
				   TargetType="FlyoutPresenter"
				   BasedOn="{StaticResource LightFlyoutPresenterStyle}" />
			<Style x:Key="ThemedSplitButtonStyle"
				   TargetType="SplitButton"
				   BasedOn="{StaticResource LightSplitButtonStyle}" />
		</ResourceDictionary>

		<ResourceDictionary x:Key="Dark">
			<Style x:Key="ThemedGridStyle"
				   TargetType="Grid"
				   BasedOn="{StaticResource DarkGridStyle}" />
			<Style x:Key="ThemedMainGridStyle"
				   TargetType="Grid"
				   BasedOn="{StaticResource DarkMainGridStyle}" />
			<Style x:Key="ThemedButtonStyle"
				   TargetType="Button"
				   BasedOn="{StaticResource DarkButtonStyle}" />
			<Style x:Key="ThemedCloseDialogButtonStyle"
				   TargetType="Button"
				   BasedOn="{StaticResource DarkCloseDialogButtonStyle}" />
			<Style x:Key="ThemedListViewItemContainerStyle"
				   TargetType="ListViewItem"
				   BasedOn="{StaticResource DarkListViewItemContainerStyle}" />
			<Style x:Key="ThemedListViewStyle"
				   TargetType="ListView"
				   BasedOn="{StaticResource DarkListViewStyle}" />
			<Style x:Key="ThemedTextBoxStyle"
				   TargetType="TextBox"
				   BasedOn="{StaticResource DarkTextBoxStyle}" />
			<Style x:Key="ThemedListViewItemUserMessageStyle"
				   TargetType="ListViewItem"
				   BasedOn="{StaticResource DarkListViewItemUserMessageStyle}" />
