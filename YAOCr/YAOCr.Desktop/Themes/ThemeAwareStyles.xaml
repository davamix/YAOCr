<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
					xmlns:custom="using:YAOCr.Controls">

	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Light">
			<Style x:Key="ThemedGridStyle"
				   TargetType="Grid"
				   BasedOn="{StaticResource LightGridStyle}" />
			<Style x:Key="ThemedMainGridStyle"
				   TargetType="Grid"
				   BasedOn="{StaticResource LightMainGridStyle}" />
			<Style x:Key="ThemedButtonStyle"
				   TargetType="Button"
				   BasedOn="{StaticResource LightButtonStyle}" />
			<Style x:Key="ThemedCloseDialogButtonStyle"
				   TargetType="Button"
				   BasedOn="{StaticResource LightCloseDialogButtonStyle}" />
