				   TargetType="controls:MarkdownTextBlock"
				   BasedOn="{StaticResource DarkMarkdownTextBlockStyle}" />
			<Style x:Key="ThemedPromptStyle"
				   TargetType="custom:Prompt"
				   BasedOn="{StaticResource DarkPromptStyle}" />
			<Style x:Key="ThemedSrollViewerSettingsStyle"
				   TargetType="ScrollViewer"
				   BasedOn="{StaticResource DarkScrollViewerSettingsStyle}" />
			<Style x:Key="ThemedDialogMainGridStyle"
				   TargetType="Grid"
				   BasedOn="{StaticResource DarkDialogMainGridStyle}" />
			<Style x:Key="ThemedDialogGridHeaderStyle"
				   TargetType="Grid"
				   BasedOn="{StaticResource DarkDialogGridHeaderStyle}" />
			<Style x:Key="ThemedDialogTextBlockHeaderStyle"
				   TargetType="TextBlock"
				   BasedOn="{StaticResource DarkDialogTextBlockHeaderStyle}" />
			<Style x:Key="ThemedDialogCotentGridStyle"
				   TargetType="Grid"
				   BasedOn="{StaticResource DarkDialogCotentGridStyle}" />
			<Style x:Key="ThemedComboBoxItemContainerStyle"
				   TargetType="ComboBoxItem"
