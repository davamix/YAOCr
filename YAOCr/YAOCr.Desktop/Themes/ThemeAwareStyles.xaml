				   BasedOn="{StaticResource DarkFlyoutPresenterStyle}" />
			<Style x:Key="ThemedSplitButtonStyle"
				   TargetType="SplitButton"
				   BasedOn="{StaticResource DarkSplitButtonStyle}" />
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
