<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="YAOCr.Controls.ConversationMessageItem"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:YAOCr.Controls"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:control="using:CommunityToolkit.WinUI.UI.Controls"
			 mc:Ignorable="d"
			 x:Name="conversationMessageItemControl"
			 Loaded="conversationMessageItemControl_Loaded">

	<UserControl.Resources>
		<Storyboard x:Name="FadeInMessageItemStoryboard">
			<DoubleAnimation Storyboard.TargetName="conversationMessageItemControl"
							 Storyboard.TargetProperty="Opacity"
							 From="0.0"
							 To="1.0"
							 Duration="0:0:0.2" />
		</Storyboard>

		<Storyboard x:Name="FadeInReloadButtonStoryboard">
			<DoubleAnimation Storyboard.TargetName="btnReload"
							 Storyboard.TargetProperty="Opacity"
							 From="0.0"
							 To="1.0"
							 Duration="0:0:0.3" />
		</Storyboard>
		<Storyboard x:Name="FadeOutReloadButtonStoryboard">
			<DoubleAnimation Storyboard.TargetName="btnReload"
							 Storyboard.TargetProperty="Opacity"
							 From="1.0"
							 To="0.0"
							 Duration="0:0:0.3" />
		</Storyboard>

		<Storyboard x:Name="FadeInEditButtonStoryboard">
			<DoubleAnimation Storyboard.TargetName="btnEdit"
							 Storyboard.TargetProperty="Opacity"
							 From="0.0"
							 To="1.0"
							 Duration="0:0:0.3" />
		</Storyboard>
		<Storyboard x:Name="FadeOutEditButtonStoryboard">
			<DoubleAnimation Storyboard.TargetName="btnEdit"
							 Storyboard.TargetProperty="Opacity"
							 From="1.0"
							 To="0.0"
							 Duration="0:0:0.3" />
		</Storyboard>
	</UserControl.Resources>

	<Grid x:Name="gridMain"
		  PointerEntered="gridMain_PointerEntered"
		  PointerExited="gridMain_PointerExited">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<control:MarkdownTextBlock x:Name="mkdMessage"
								   Grid.Row="0"
								   Text="{Binding ElementName=conversationMessageItemControl, Path=Message.Content}"
								   Style="{ThemeResource ThemedMarkdownTextBlockStyle}" />

		<StackPanel x:Name="stackEditMessage"
					Orientation="Horizontal"
					Grid.Row="0"
					Visibility="Collapsed">
			<TextBox x:Name="txtMessage"
					 Text="{Binding  ElementName=conversationMessageItemControl, Path=EditedMessage.NewContent, Mode=TwoWay}"
					 Style="{ThemeResource ThemedTextBoxStyle}"
					 AcceptsReturn="True"
					 TextWrapping="Wrap" />

			<Button x:Name="btnSave"
					Style="{ThemeResource ThemedButtonStyle}"
					Margin="5,0,0,0"
					Command="{Binding ElementName=conversationMessageItemControl, Path=EditMessageCommand}"
					CommandParameter="{Binding  ElementName=conversationMessageItemControl, Path=EditedMessage}"
					Click="btnSave_Click">
				<FontIcon Glyph="&#xE74E;" />
			</Button>
		</StackPanel>


		<ListView Grid.Row="1"
				  ItemsSource="{Binding ElementName=conversationMessageItemControl, Path=FilesPath}"
				  SelectionMode="None">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding}"
							   Style="{StaticResource CaptionTextBlockStyle}" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<StackPanel x:Name="toolbar"
					Orientation="Horizontal"
					HorizontalAlignment="Right"
					VerticalAlignment="Bottom">
			<Button x:Name="btnReload"
					Style="{ThemeResource ThemedButtonStyle}"
					Opacity="0"
					ToolTipService.ToolTip="Regenate response"
					Command="{Binding ElementName=conversationMessageItemControl, Path=ReloadMessageCommand}"
					CommandParameter="{Binding ElementName=conversationMessageItemControl, Path=Message}"
					PointerEntered="btn_PointerEntered"
					PointerExited="btn_PointerExited">
				<FontIcon Glyph="&#xE72C;" />
			</Button>

			<Button x:Name="btnEdit"
					Style="{ThemeResource ThemedButtonStyle}"
					Opacity="0"
					ToolTipService.ToolTip="Edit message"
					PointerEntered="btn_PointerEntered"
					PointerExited="btn_PointerExited"
					Click="btnEdit_Click">
				<FontIcon Glyph="&#xE70F;" />
			</Button>
		</StackPanel>


	</Grid>
</UserControl>
