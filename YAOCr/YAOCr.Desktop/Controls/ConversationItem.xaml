<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="YAOCr.Controls.ConversationItem"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:YAOCr.Controls"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 x:Name="conversationItemControl">

	<Grid PointerEntered="gridReadItem_PointerEntered"
		  PointerExited="gridReadItem_PointerExited"
		  Background="Transparent"
		  Padding="10">
		<Grid x:Name="gridReadItem">
			<Grid.Resources>
				<Storyboard x:Name="fadeInRenameButtonStoryboard">
					<DoubleAnimation Storyboard.TargetName="panelTools"
									 Storyboard.TargetProperty="Opacity"
									 From="0"
									 To="1"
									 Duration="0:0:0.5" />
				</Storyboard>

				<Storyboard x:Name="fadeOutRenameButtonStoryboard">
					<DoubleAnimation Storyboard.TargetName="panelTools"
									 Storyboard.TargetProperty="Opacity"
									 From="1"
									 To="0"
									 Duration="0:0:0.5" />
				</Storyboard>
			</Grid.Resources>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<TextBlock x:Name="txtConversationName"
					   Grid.Column="0"
					   Text="{Binding ElementName=conversationItemControl, Path=Conversation.Name}"
					   VerticalAlignment="Center" />

			<StackPanel x:Name="panelTools"
						Grid.Column="1"
						Orientation="Horizontal"
						Opacity="0">
				<Button x:Name="btnRenameConversation"
						Style="{ThemeResource ThemedButtonStyle}"
						ToolTipService.ToolTip="Rename conversation"
						PointerEntered="btn_PointerEntered"
						PointerExited="btn_PointerExited"
						Click="btnRenameConversation_Click">
					<FontIcon Glyph="&#xE8AC;" />
				</Button>

				<Button x:Name="btnDeleteConversation"
						Style="{ThemeResource ThemedButtonStyle}"
						ToolTipService.ToolTip="Delete conversation"
						PointerEntered="btn_PointerEntered"
						PointerExited="btn_PointerExited"
						Command="{Binding ElementName=conversationItemControl, Path=DeleteCommand}"
						CommandParameter="{Binding ElementName=conversationItemControl, Path=Conversation}">
					<FontIcon Glyph="&#xE74D;" />
				</Button>

				<Button x:Name="btnExportConversation"
						Style="{ThemeResource ThemedButtonStyle}"
						ToolTipService.ToolTip="Export conversation"
						PointerEntered="btn_PointerEntered"
						PointerExited="btn_PointerExited"
						Click="btnExportConversation_Click">
					<FontIcon Glyph="&#xEDE1;" />
				</Button>
			</StackPanel>

		</Grid>

		<Grid x:Name="gridEditItem"
			  Visibility="Collapsed">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<TextBox x:Name="txtEditConversationName"
					 Grid.Column="0"
					 Style="{ThemeResource ThemedTextBoxStyle}"
					 Text="{Binding ElementName=conversationItemControl, Path=Conversation.Name, Mode=TwoWay}"
					 KeyUp="txtEditConversationName_KeyUp" />

			<Button x:Name="btnSave"
					Grid.Column="1"
					Style="{ThemeResource ThemedButtonStyle}"
					Margin="10,0,0,0"
					Command="{Binding ElementName=conversationItemControl, Path=SaveCommand}"
					CommandParameter="{Binding ElementName=conversationItemControl, Path=Conversation}"
					PointerEntered="btn_PointerEntered"
					PointerExited="btn_PointerExited"
					Click="btnSave_Click">
				<FontIcon Glyph="&#xE74E;" />
			</Button>
		</Grid>

	</Grid>
</UserControl>
