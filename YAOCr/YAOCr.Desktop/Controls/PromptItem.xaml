<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="YAOCr.Controls.PromptItem"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:YAOCr.Controls"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 x:Name="PromptItemControl">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>

		<TextBlock x:Name="txtValue"
				   Grid.Column="0"
				   Text="{Binding}"/>

		<Button x:Name="btnDelete"
				Grid.Column="1"
				Style="{ThemeResource ThemedButtonStyle}"
				Click="btnDelete_Click"
				PointerEntered="btn_PointerEntered"
				PointerExited="btn_PointerExited">
			<FontIcon Glyph="&#xE74D;" />
		</Button>
	</Grid>
</UserControl>
